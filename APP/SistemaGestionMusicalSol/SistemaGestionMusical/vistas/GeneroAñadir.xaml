<Window x:Class="SistemaGestionMusical.vistas.GeneroAñadir"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaGestionMusical.vistas"
        mc:Ignorable="d"
        Title="GeneroAñadir" Height="177" Width="243">
    <Grid>
        <TextBox x:Name="tbNombre" HorizontalAlignment="Center" Margin="0,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="203"/>
        <TextBox x:Name="tbNombreCorto" HorizontalAlignment="Left" Margin="20,81,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="96" MaxLength="4"/>
        <Label Content="Nombre" HorizontalAlignment="Left" Margin="17,4,0,0" VerticalAlignment="Top" Width="72"/>
        <Label Content="Nombre corto" HorizontalAlignment="Left" Margin="17,53,0,0" VerticalAlignment="Top" Height="27"/>
        <Button x:Name="btnAgregar" Content="Agregar" HorizontalAlignment="Left" Margin="20,118,0,0" VerticalAlignment="Top" Width="96" Height="33" Click="BtnAgregar_Click"/>
        <Button x:Name="btnCancelar" Content="Cancelar" HorizontalAlignment="Left" Margin="158,127,0,0" VerticalAlignment="Top" Width="65" Height="24" Click="BtnCancelar_Click"/>
    </Grid>
</Window>
