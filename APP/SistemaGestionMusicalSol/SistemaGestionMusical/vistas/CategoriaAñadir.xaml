<Window x:Class="SistemaGestionMusical.vistas.CategoriaAñadir"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaGestionMusical.vistas"
        mc:Ignorable="d"
        Title="CategoriaAñadir" Height="143" Width="282">
    <Grid>
        <TextBox x:Name="tbnNombre" HorizontalAlignment="Center" Margin="0,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="211"/>
        <Label Content="Nombre de la categoría" HorizontalAlignment="Left" Margin="32,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnAgregar" Content="Agregar" HorizontalAlignment="Left" Margin="35,80,0,0" VerticalAlignment="Top" Width="107" Height="29" Background="#FFB8EABB" Click="BtnAgregar_Click"/>
        <Button x:Name="btnCancelar" Content="Cancelar" HorizontalAlignment="Left" Margin="166,89,0,0" VerticalAlignment="Top" Width="80" Click="BtnCancelar_Click"/>

    </Grid>
</Window>
